# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5
AZURE_OPENAI_API_VERSION=2025-08-07

# Microsoft Graph Configuration
GRAPH_CLIENT_ID=your-client-id
GRAPH_CLIENT_SECRET=your-client-secret
GRAPH_TENANT_ID=your-tenant-id
# Sender email for client credentials flow (must have Mail.Send permission)
GRAPH_SENDER_EMAIL=your-email@domain.com

# ERP Configuration (Dynamics 365)
# Your Dynamics 365 API endpoint (e.g., https://[insert-id-here].api.crm.dynamics.com/api/data/v9.2)
ERP_API_ENDPOINT=https://your-org.api.crm.dynamics.com/api/data/v9.2
# Azure AD App Registration credentials for OAuth2 authentication
ERP_CLIENT_ID=your-client-id
ERP_CLIENT_SECRET=your-client-secret
ERP_TENANT_ID=your-tenant-id
# The resource URL for your Dynamics 365 instance (typically same as API endpoint without /api/data/v9.2)
ERP_RESOURCE=https://your-org.api.crm.dynamics.com/

# Application Settings
PORT=3000
RISK_THRESHOLD_HIGH=0.5
RISK_THRESHOLD_MEDIUM=0.3

# Testing Email & Teams Functionality
# Set these to your email address to test dunning emails and Teams messages
TEST_CUSTOMER_EMAIL=your-email@domain.com
TEST_COLLECTIONS_EMAIL=your-email@domain.com

# Demo Mode - Set to 'true' to use mock data for demonstration (recommended for competition demo)
# Set to 'false' to query actual Dynamics 365 accounts entity (limited data without invoice module)
DEMO_MODE=true
